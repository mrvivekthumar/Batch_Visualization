# ==============================================
# DEVELOPMENT ENVIRONMENT CONFIGURATION
# File: Docker/.env.dev
# ==============================================

# ==============================================
# DATABASE CONFIGURATION (Development)
# ==============================================
DB_NAME=performance_db
DB_USERNAME=postgres
DB_PASSWORD=devpassword123!
DB_HOST=localhost
DB_PORT=5433
DB_SSL_ENABLED=false
DB_SSL_MODE=disable

# ==============================================
# APPLICATION SECURITY (Development - Relaxed)
# ==============================================
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123!
VIEWER_USERNAME=viewer
VIEWER_PASSWORD=viewer123!
SECURITY_ENABLED=true

# ==============================================
# RATE LIMITING (Development - Disabled)
# ==============================================
RATE_LIMIT_ENABLED=false
RATE_LIMIT_RPM=1000
RATE_LIMIT_BURST=100
RATE_LIMIT_PERF_OPS=1000

# ==============================================
# PERFORMANCE TESTING (Development - Small)
# ==============================================
PERF_TEST_MAX_RECORDS=10000
PERF_TEST_MAX_BATCH=1000

# ==============================================
# MONITORING & METRICS (Development)
# ==============================================
PROMETHEUS_ENABLED=true
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin123!

# ==============================================
# REDIS CONFIGURATION (Development)
# ==============================================
REDIS_PASSWORD=redis123!

# ==============================================
# LOGGING CONFIGURATION (Development - Verbose)
# ==============================================
LOG_LEVEL_APP=DEBUG
LOG_LEVEL_SQL=DEBUG
LOG_LEVEL_SECURITY=DEBUG
SHOW_SQL=true
FORMAT_SQL=true

# ==============================================
# APPLICATION DEPLOYMENT (Development)
# ==============================================
APP_VERSION=2.0.0
ENVIRONMENT=development
SPRING_PROFILES_ACTIVE=dev