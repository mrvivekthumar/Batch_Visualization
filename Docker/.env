# ==============================================
# DATABASE CONFIGURATION
# ==============================================
DB_NAME=performance_db
DB_USERNAME=postgres
DB_PASSWORD=securepassword123!

# ==============================================
# APPLICATION SECURITY
# ==============================================
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123!
VIEWER_USERNAME=viewer
VIEWER_PASSWORD=viewer123!

# ==============================================
# Grafana Configuration  
# ==============================================
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin123!

# ==============================================
# REDIS CONFIGURATION (Optional)
# ==============================================
REDIS_PASSWORD=redis123!

# ==============================================
# APPLICATION DEPLOYMENT
# ==============================================
APP_VERSION=2.0.0
ENVIRONMENT=development

# Performance Testing Limits
PERF_TEST_MAX_RECORDS=100000
PERF_TEST_MAX_BATCH=10000

# Logging Levels (for development)
LOG_LEVEL_APP=INFO
LOG_LEVEL_SQL=WARN
LOG_LEVEL_SECURITY=WARN

# Production Override (set to 'production' for production deployment)
SPRING_PROFILES_ACTIVE=docker

SPRING_MAIN_ALLOW_BEAN_DEFINITION_OVERRIDING=true

# Increase rate limits for development
RATE_LIMIT_ENABLED=false
RATE_LIMIT_RPM=120
RATE_LIMIT_BURST=50
RATE_LIMIT_PERF_OPS=40