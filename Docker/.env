# ==============================================
# DOCKER ENVIRONMENT CONFIGURATION
# File: Docker/.env (for docker-compose)
# ==============================================

# ==============================================
# DATABASE CONFIGURATION (Docker)
# ==============================================
DB_NAME=performance_db
DB_USERNAME=postgres
DB_PASSWORD=securepassword123!
DB_HOST=postgres
DB_PORT=5432
DB_SSL_ENABLED=false
DB_SSL_MODE=prefer

# ==============================================
# APPLICATION SECURITY (Docker - Moderate)
# ==============================================
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123!
VIEWER_USERNAME=viewer
VIEWER_PASSWORD=viewer123!
SECURITY_ENABLED=true

# ==============================================
# RATE LIMITING (Docker - Moderate)
# ==============================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_RPM=60
RATE_LIMIT_BURST=20
RATE_LIMIT_PERF_OPS=50

# ==============================================
# PERFORMANCE TESTING (Docker - Medium)
# ==============================================
PERF_TEST_MAX_RECORDS=50000
PERF_TEST_MAX_BATCH=5000

# ==============================================
# MONITORING & METRICS (Docker)
# ==============================================
PROMETHEUS_ENABLED=true
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin123!

# ==============================================
# REDIS CONFIGURATION (Docker)
# ==============================================
REDIS_PASSWORD=redis123!

# ==============================================
# LOGGING CONFIGURATION (Docker - Balanced)
# ==============================================
LOG_LEVEL_APP=INFO
LOG_LEVEL_SQL=WARN
LOG_LEVEL_SECURITY=WARN
SHOW_SQL=false
FORMAT_SQL=false

# ==============================================
# APPLICATION DEPLOYMENT (Docker)
# ==============================================
APP_VERSION=2.0.0
ENVIRONMENT=docker
SPRING_PROFILES_ACTIVE=docker